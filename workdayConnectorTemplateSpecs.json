{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspace": {
            "defaultValue": "cdp-logana-prod",
            "type": "string",
            "metadata": {
                "description": "Workspace name for Log Analytics where Microsoft Sentinel is setup"
            }
        },
        "logAnalyticsTableId1": {
            "defaultValue": "WorkdayLogs_CL",
            "type": "string",
            "metadata": {
                "description": "Log Analytics table where the logs are going to (it needs to be created in advance)"
            }
        },
        "dceURL": {
            "defaultValue": "https://workday-dce-2sp7.westeurope-1.ingest.monitor.azure.com",
            "type": "string",
            "metadata": {
                "description": "Logs Ingestion URL from data collection Endpoint"
            }
        },
        "dcrID": {
            "defaultValue": "dcr-52053c1000af4dbd802c570761679dfe",
            "type": "string",
            "metadata": {
                "description": "DCR immutable Id"
            }
        },
        "dataConnectorTitle": {
            "defaultValue": "Workday (User Activity)",
            "type": "string",
            "metadata": {
                "description": "Title of the data connector to appear in Sentinel"
            }
        },
        "dataConnectorDescription": {
            "defaultValue": "The workday data connector provides the capability to ingest User Activity Logging from Workday into Microsoft Sentinel using the workday REST API.",
            "type": "string",
            "metadata": {
                "description": "Markdown description of the data connector to appear in Sentinel"
            }
        },
        "dataConnectorPublisher": {
            "defaultValue": "Maersk",
            "type": "string",
            "metadata": {
                "description": "Publisher of the data connector to appear in Sentinel"
            }
        },
        "supportName": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "Name of the support team for this data connector."
            }
        },
        "supportEmail": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "Email of the support team for this data connector."
            }
        },
        "tokenEndpoint": {
            "defaultValue": "https://wd3-services1.myworkday.com/ccx/oauth2/maersk/token",
            "type": "string",
            "metadata": {
                "description": "Token endpoint required for Workday authentication through Oauth 2.0 code flow."
            }
        },
        "authorizationEndpoint": {
            "defaultValue": "https://wd3.myworkday.com/maersk/authorize?redirect=n",
            "type": "string",
            "metadata": {
                "description": "Authorzation endpoint required for Workday authentication through Oauth 2.0 code flow."
            }
        },
        "redirectUri": {
            "defaultValue": "https://portal.azure.com/TokenAuthorize/ExtensionName/Microsoft_Azure_Security_Insights",
            "type": "string",
            "metadata": {
                "description": "Redirect URI  required for Workday authentication through Oauth 2.0 code flow."
            }
        },
        "apiEndpoint": {
            "defaultValue": "https://wd3-services1.myworkday.com/ccx/api/privacy/v1/maersk/activityLogging",
            "type": "string",
            "metadata": {
                "description": "Workday user activity Loggin Rest Api endpoint."
            }
        }
    },
    "variables": {
        "solutionId": "workday-sentinel",
        "_solutionId": "[variables('solutionId')]",
        "workspaceResourceId": "[resourceId('microsoft.OperationalInsights/Workspaces', parameters('workspace'))]",
        "uiConfigId1": "workday-sentinel-definition",
        "_uiConfigId1": "[variables('uiConfigId1')]",
        "dataConnectorContentId1": "workday-sentinel-definition",
        "_dataConnectorContentId1": "[variables('dataConnectorContentId1')]",
        "dataConnectorId1": "[extensionResourceId(resourceId('Microsoft.OperationalInsights/workspaces', parameters('workspace')), 'Microsoft.SecurityInsights/dataConnectorDefinitions', variables('_dataConnectorContentId1'))]",
        "_dataConnectorId1": "[variables('dataConnectorId1')]",
        "dataConnectorTemplateSpecName1": "[concat(parameters('workspace'),'-dc-',uniquestring(variables('_dataConnectorContentId1')))]",
        "dataConnectorVersion1": "1.0.0",
        "dataConnectorContentId2": "workday-sentinel-apipoller",
        "_dataConnectorContentId2": "[variables('dataConnectorContentId2')]",
        "dataConnectorId2": "[extensionResourceId(resourceId('Microsoft.OperationalInsights/workspaces', parameters('workspace')), 'Microsoft.SecurityInsights/dataConnectors', variables('_dataConnectorContentId2'))]",
        "_dataConnectorId2": "[variables('dataConnectorId2')]",
        "dataConnectorTemplateSpecName2": "[concat(parameters('workspace'),'-dc-',uniquestring(variables('_dataConnectorContentId2')))]",
        "dataConnectorVersion": "1.0.0",
        "location": "[resourceGroup().location]",
        "subscriptionID": "[last(split(subscription().id, '/'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/templateSpecs",
            "apiVersion": "2021-05-01",
            "name": "[variables('dataConnectorTemplateSpecName1')]",
            "location": "[variables('location')]",
            "tags": {
                "hidden-sentinelWorkspaceId": "[variables('workspaceResourceId')]",
                "hidden-sentinelContentType": "DataConnector"
            },
            "properties": {
                "description": "[parameters('dataConnectorDescription')]",
                "displayName": "[parameters('dataConnectorTitle')]"
            }
        },
        {
            "type": "Microsoft.Resources/templateSpecs/versions",
            "apiVersion": "2021-05-01",
            "name": "[concat(variables('dataConnectorTemplateSpecName1'),'/',variables('dataConnectorVersion1'))]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/templateSpecs', variables('dataConnectorTemplateSpecName1'))]"
            ],
            "tags": {
                "hidden-sentinelWorkspaceId": "[variables('workspaceResourceId')]",
                "hidden-sentinelContentType": "DataConnector"
            },
            "properties": {
                "description": "Workday data connector with template version 1.0.0",
                "mainTemplate": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "[variables('dataConnectorVersion')]",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "type": "Microsoft.OperationalInsights/workspaces/providers/dataConnectorDefinitions",
                            "apiVersion": "2022-09-01-preview",
                            "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/',variables('_dataConnectorContentId1'))]",
                            "location": "[variables('location')]",
                            "kind": "Customizable",
                            "properties": {
                                "connectorUiConfig": {
                                    "id": "[variables('_uiConfigId1')]",
                                    "title": "[parameters('dataConnectorTitle')]",
                                    "publisher": "[parameters('dataConnectorPublisher')]",
                                    "descriptionMarkdown": "[parameters('dataConnectorDescription')]",
                                    "graphQueriesTableName": "[parameters('logAnalyticsTableId1')]",
                                    "graphQueries": [
                                        {
                                            "metricName": "Total events received",
                                            "legend": "Workday Logs",
                                            "baseQuery": "{{graphQueriesTableName}}"
                                        }
                                    ],
                                    "sampleQueries": [
                                        {
                                            "description": "Get Sample of Workday Logs",
                                            "query": "{{graphQueriesTableName}}\n | take 10"
                                        }
                                    ],
                                    "dataTypes": [
                                        {
                                            "name": "{{graphQueriesTableName}}",
                                            "lastDataReceivedQuery": "{{graphQueriesTableName}}\n       | where TimeGenerated > ago(12h)    | summarize Time = max(TimeGenerated)\n            | where isnotempty(Time)"
                                        }
                                    ],
                                    "connectivityCriteria": [
                                        {
                                            "type": "HasDataConnectors"
                                        }
                                    ],
                                    "availability": {
                                        "isPreview": false
                                    },
                                    "permissions": {
                                        "resourceProvider": [
                                            {
                                                "provider": "Microsoft.OperationalInsights/workspaces",
                                                "permissionsDisplayText": "Read and Write permissions are required.",
                                                "providerDisplayName": "Workspace",
                                                "scope": "Workspace",
                                                "requiredPermissions": {
                                                    "write": true,
                                                    "read": true,
                                                    "delete": true
                                                }
                                            }
                                        ],
                                        "customs": [
                                            {
                                                "name": "Worday permissions",
                                                "description": "Permissions to access workday API to collect user activity logs are required. Secured by: System auditing; Scope: System."
                                            }
                                        ]
                                    },
                                    "instructionSteps": [
                                        {
                                            "description": "Connect using OAuth2, please.",
                                            "instructions": [
                                                {
                                                    "type": "OAuthForm",
                                                    "parameters": {
                                                        "clientIdLabel": "Client ID",
                                                        "clientSecretLabel": "Client Secret",
                                                        "connectButtonLabel": "Connect",
                                                        "disconnectButtonLabel": "Disconnect"
                                                    }
                                                }
                                            ],
                                            "title": "Connect Workday User Activity Logs to Microsoft Sentinel"
                                        }
                                    ]
                                },
                                "connectionsConfig": {
                                    "templateSpecName": "[concat('/subscriptions/',variables('subscriptionID'),'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Resources/templateSpecs/',variables('dataConnectorTemplateSpecName2'))]",
                                    "templateSpecVersion": "[variables('dataConnectorVersion')]"
                                }
                            }
                        },
                        {
                            "type": "Microsoft.OperationalInsights/workspaces/providers/metadata",
                            "apiVersion": "2022-01-01-preview",
                            "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/',concat('DataConnector-', last(split(variables('_dataConnectorId1'),'/'))))]",
                            "properties": {
                                "parentId": "[extensionResourceId(resourceId('Microsoft.OperationalInsights/workspaces', parameters('workspace')), 'Microsoft.SecurityInsights/dataConnectorDefinitions', variables('_dataConnectorContentId1'))]",
                                "contentId": "[variables('_dataConnectorContentId1')]",
                                "kind": "DataConnector",
                                "version": "[variables('dataConnectorVersion')]",
                                "source": {
                                    "kind": "Solution",
                                    "name": "[parameters('dataConnectorTitle')]",
                                    "sourceId": "[variables('_solutionId')]"
                                },
                                "author": {
                                    "name": "[parameters('dataConnectorPublisher')]"
                                },
                                "support": {
                                    "name": "[parameters('supportName')]",
                                    "email": "[parameters('supportEmail')]"
                                }
                            }
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.OperationalInsights/workspaces/providers/dataConnectorDefinitions",
            "apiVersion": "2022-09-01-preview",
            "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/',variables('_dataConnectorContentId1'))]",
            "location": "[variables('location')]",
            "kind": "Customizable",
            "properties": {
                "connectorUiConfig": {
                    "id": "[variables('_uiConfigId1')]",
                    "title": "[parameters('dataConnectorTitle')]",
                    "publisher": "[parameters('dataConnectorPublisher')]",
                    "descriptionMarkdown": "[parameters('dataConnectorDescription')]",
                    "graphQueriesTableName": "[parameters('logAnalyticsTableId1')]",
                    "graphQueries": [
                        {
                            "metricName": "Total events received",
                            "legend": "Workday Logs",
                            "baseQuery": "{{graphQueriesTableName}}"
                        }
                    ],
                    "sampleQueries": [
                        {
                            "description": "Get Sample of Workday Logs",
                            "query": "{{graphQueriesTableName}}\n | take 10"
                        }
                    ],
                    "dataTypes": [
                        {
                            "name": "{{graphQueriesTableName}}",
                            "lastDataReceivedQuery": "{{graphQueriesTableName}}\n       | where TimeGenerated > ago(12h)    | summarize Time = max(TimeGenerated)\n            | where isnotempty(Time)"
                        }
                    ],
                    "connectivityCriteria": [
                        {
                            "type": "HasDataConnectors"
                        }
                    ],
                    "availability": {
                        "isPreview": false
                    },
                    "permissions": {
                        "resourceProvider": [
                            {
                                "provider": "Microsoft.OperationalInsights/workspaces",
                                "permissionsDisplayText": "Read and Write permissions are required.",
                                "providerDisplayName": "Workspace",
                                "scope": "Workspace",
                                "requiredPermissions": {
                                    "write": true,
                                    "read": true,
                                    "delete": true
                                }
                            }
                        ],
                        "customs": [
                            {
                                "name": "Worday permissions",
                                "description": "Permissions to access workday API to collect user activity logs are required. Secured by: System auditing; Scope: System."
                            }
                        ]
                    },
                    "instructionSteps": [
                        {
                            "description": "Connect using OAuth2, please.",
                            "instructions": [
                                {
                                    "type": "OAuthForm",
                                    "parameters": {
                                        "clientIdLabel": "Client ID",
                                        "clientSecretLabel": "Client Secret",
                                        "connectButtonLabel": "Connect",
                                        "disconnectButtonLabel": "Disconnect"
                                    }
                                }
                            ],
                            "title": "Connect Workday User Activity Logs to Microsoft Sentinel"
                        }
                    ]
                },
                "connectionsConfig": {
                    "templateSpecName": "[concat('/subscriptions/',variables('subscriptionID'),'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Resources/templateSpecs/',variables('dataConnectorTemplateSpecName2'))]",
                    "templateSpecVersion": "[variables('dataConnectorVersion')]"
                }
            }
        },
        {
            "type": "Microsoft.Resources/templateSpecs",
            "apiVersion": "2021-05-01",
            "name": "[variables('dataConnectorTemplateSpecName2')]",
            "location": "[variables('location')]",
            "tags": {
                "hidden-sentinelWorkspaceId": "[variables('workspaceResourceId')]",
                "hidden-sentinelContentType": "DataConnector"
            },
            "properties": {
                "description": "[parameters('dataConnectorDescription')]",
                "displayName": "[parameters('dataConnectorTitle')]"
            }
        },
        {
            "type": "Microsoft.Resources/templateSpecs/versions",
            "apiVersion": "2021-05-01",
            "name": "[concat(variables('dataConnectorTemplateSpecName2'),'/',variables('dataConnectorVersion'))]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/templateSpecs', variables('dataConnectorTemplateSpecName2'))]"
            ],
            "tags": {
                "hidden-sentinelWorkspaceId": "[variables('workspaceResourceId')]",
                "hidden-sentinelContentType": "DataConnector"
            },
            "properties": {
                "description": "[parameters('dataConnectorDescription')]",
                "mainTemplate": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "[variables('dataConnectorVersion')]",
                    "parameters": {
                        "clientSecret": {
                            "defaultValue": "-NA-",
                            "type": "string",
                            "minLength": 1,
                            "metadata": {
                                "description": "clientSecret"
                            }
                        },
                        "clientId": {
                            "defaultValue": "-NA-",
                            "type": "string",
                            "minLength": 1,
                            "metadata": {
                                "description": "ClientId"
                            }
                        },
                        "authorizationCode": {
                            "defaultValue": "-NA-",
                            "type": "string",
                            "minLength": 1,
                            "metadata": {
                                "description": "authorization code"
                            }
                        },
                        "connectorDefinitionName": {
                            "defaultValue": "",
                            "type": "string",
                            "minLength": 1,
                            "metadata": {
                                "description": "connectorDefinitionName"
                            }
                        },
                        "workspace": {
                            "defaultValue": "[parameters('workspace')]",
                            "type": "string"
                        },
                        "dataConnectorTitle": {
                            "defaultValue": "[parameters('dataConnectorTitle')]",
                            "type": "string"
                        },
                        "tokenEndpoint": {
                            "defaultValue": "[parameters('tokenEndpoint')]",
                            "type": "string"
                        },
                        "authorizationEndpoint": {
                            "defaultValue": "[parameters('authorizationEndpoint')]",
                            "type": "string"
                        },
                        "redirectUri": {
                            "defaultValue": "[parameters('redirectUri')]",
                            "type": "string"
                        },
                        "apiEndpoint": {
                            "defaultValue": "[parameters('apiEndpoint')]",
                            "type": "string"
                        },
                        "logAnalyticsTableId1": {
                            "defaultValue": "[parameters('logAnalyticsTableId1')]",
                            "type": "string"
                        },
                        "dceURL": {
                            "defaultValue": "[parameters('logAnalyticsTableId1')]",
                            "type": "string"
                        },
                        "dcrID": {
                            "defaultValue": "[parameters('dcrID')]",
                            "type": "string"
                        }
                    },
                    "variables": {
                        "location": "[variables('location')]",
                        "dataConnectorContentId2": "[variables('dataConnectorContentId2')]"
                    },
                    "resources": [
                        {
                            "type": "Microsoft.OperationalInsights/workspaces/providers/dataConnectors",
                            "apiVersion": "2021-10-01-preview",
                            "name": "[[concat(parameters('workspace'),'/Microsoft.SecurityInsights/', variables('dataConnectorContentId2'))]",
                            "location": "[variables('location')]",
                            "kind": "RestApiPoller",
                            "properties": {
                                "connectorDefinitionName": "[[parameters('connectorDefinitionName')]",
                                "dataType": "[parameters('logAnalyticsTableId1')]",
                                "dcrConfig": {
                                    "streamName": "[concat('Custom-',parameters('logAnalyticsTableId1'))]",
                                    "dataCollectionEndpoint": "[parameters('dceURL')]",
                                    "dataCollectionRuleImmutableId": "[parameters('dcrID')]"
                                },
                                "auth": {
                                    "type": "OAuth2",
                                    "IsClientSecretInHeader": "true",
                                    "IsCredentialsInHeaders": "true",
                                    "ClientSecret": "[[parameters('clientSecret')]",
                                    "ClientId": "[[parameters('clientId')]",
                                    "AuthorizationCode": "[[parameters('authorizationCode')]",
                                    "GrantType": "authorization_code",
                                    "TokenEndpoint": "[parameters('tokenEndpoint')]",
                                    "tokenEndpointHeaders": {
                                        "Accept": "application/json",
                                        "Content-Type": "application/x-www-form-urlencoded"
                                    },
                                    "authorizationEndpoint": "[parameters('authorizationEndpoint')]",
                                    "authorizationEndpointQueryParameters": {
                                        "redirect": "n"
                                    },
                                    "redirectUri": "[parameters('redirectUri')]"
                                },
                                "request": {
                                    "apiEndpoint": "[parameters('apiEndpoint')]",
                                    "rateLimitQPS": 10,
                                    "queryWindowInMin": 5,
                                    "httpMethod": "GET",
                                    "retryCount": 3,
                                    "timeoutInSeconds": 60,
                                    "headers": {
                                        "Accept": "application/json"
                                    },
                                    "StartTimeAttributeName": "from",
                                    "EndTimeAttributeName": "to",
                                    "queryParameters": {
                                        "type": "userActivity",
                                        "from": "{_QueryWindowStartTime}",
                                        "to": "{_QueryWindowEndTime}",
                                        "instancesReturned": "10"
                                    }
                                },
                                "paging": {
                                    "pagingType": "Offset",
                                    "pageSize": 1000,
                                    "PageSizeParaName": "limit",
                                    "OffsetParaName": "offset"
                                },
                                "response": {
                                    "eventsJsonPaths": [
                                        "$.data"
                                    ]
                                }
                            }
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {}
}